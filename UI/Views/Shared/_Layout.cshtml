<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 大学生生活实践平台</title>
    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css?family=Rancho&effect=shadow-multiple" rel="stylesheet" />
    <style>
        html, body {
            /*font-family:'Rancho', serif;*/
        }

        #sptj-navbar {
            background-color: #808080;
        }

            #sptj-navbar a {
                color: #fff;
            }
    </style>
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div id="sptj-navbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("STUDENTS' LIFE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand font-effect-shadow-multiple" })
            </div>

            <!--导航栏部分-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("兼职新星", "Index", "Home")</li>
                    <li>@Html.ActionLink("最热兼职", "Index", "Activities")</li>
                    <li>@Html.ActionLink("兼职帮帮乐", "Index", "Dynamics")</li>

                    <!--搜索框-->
                    <li style="margin-right: 0px;">
                        <a href="javascript:void(0)" class="nav_search">
                            <span id="search-btn" class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            @using (Html.BeginForm("Index","Search", FormMethod.Post, new { style = "display:inline-block;" }))
                            {
                                <input style="border:0;width:0;transition:width .3s;" id="search-text" type="text" name="" value="" />
                            }
                           <!--加入form表单，把搜索的数据传输过去-->
                        </a>
                        <script>
                            var searchBtn = document.getElementById('search-btn');
                            var searchText = document.getElementById('search-text');
                            var clicked = false
                            searchBtn.addEventListener('click', function () {
                                if (!clicked) searchText.style.width = '200px';
                                else searchText.style.width = '0';
                                clicked = !clicked;
                            });
                        </script>
                        <!--js代码实现点击搜索按钮实现搜索框弹出-->
                    </li>              
                </ul>
                <span style="float:right;margin-top:15px">@Html.ActionLink("注册", "Register", "Users")</span>
                &nbsp;&nbsp;&nbsp;
                <span style="float:right;margin-top:15px">@Html.ActionLink("登录", "Login", "Users")</span>
            </div>
    </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 大学生生活实践平台</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
